{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Program",
            "dependsOrder": "sequence",
            "dependsOn": [
                "FW: Build",
                "HW: Program"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "HW: Build",
            "type": "shell",
            "command": "/opt/gowin/IDE/bin/gw_sh ${workspaceFolder}/hw/tools/build.tcl",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "HW: Program",
            "type": "shell",
            "command": "/opt/gowin/IDE/bin/gw_sh ${workspaceFolder}/hw/tools/build.tcl -program",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "HW: Flash",
            "type": "shell",
            "command": "/opt/gowin/IDE/bin/gw_sh ${workspaceFolder}/hw/tools/build.tcl -flash",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "HW: Test",
            "type": "shell",
            "command": "/opt/gowin/IDE/bin/gw_sh ${workspaceFolder}/hw/tools/build.tcl -test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "FW: Configure",
            "type": "shell",
            "command": "cmake --preset debug",
            "options": {
                "cwd": "${workspaceFolder}/sw"
            },
            "problemMatcher": []
        },
        {
            "label": "FW: Build",
            "type": "shell",
            "command": "cmake --build --preset debug --verbose",
            "options": {
                "cwd": "${workspaceFolder}/sw"
            },
            "group": "build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/sw"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "FW: Clean (outputs only)",
            "type": "shell",
            "command": "cmake --build --preset debug --target clean --verbose",
            "options": {
                "cwd": "${workspaceFolder}/sw"
            },
            "problemMatcher": []
        }
    ]
}